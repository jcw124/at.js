<main>
    <div class="wrapper">
        <div class="event_list">
            <h1>Edit an Event</h1>
            <form action="/admin/goto-event/:id" method="GET">
                <select name="eventName">
                    {{#each event}}
                        <option value="{{this.dataValues.eventName}}">{{this.dataValues.eventName}}</option>
                       
                    {{/each}}
                </select>
                <br>
                <br>
                <input type="submit">
            </form>
        </div>
        <div class="event_list">
            <h1>Add an event</h1>
            <form class="artist_form" method="POST" action="/createEvent">
                <input type="text" name="eventName" placeholder="Event's Name*">
                <input type="text" name="venueName" placeholder="Venue Name*">
                <input type="date" name="eventDate" placeholder="Event Date*">
                <input type="time" name="startTime" placeholder="Start Time">
                <input type="text" name="eventAddress" placeholder="Event Address">
                <input type="text" name="eventCity" placeholder="City">
                <input type="text" name="eventState" placeholder="State">
                <input type="text" name="eventZip" placeholder="Zip Code">
                <input type="text" name="eventCountry" placeholder="Country">
                <input type="number" name="ageRestrictions" placeholder="Age Restriction">
                <textarea rows="6" cols="50" name="showDetails" placeholder="Details of the Show"></textarea>
                <input type="url" name="eventLink" placeholder="Link to tickting">
                <input type="text" name="artist_01" placeholder="Main Artist performing #1">
                <input type="text" name="artist_02" placeholder="Main Artist performing #2">
                <input type="text" name="artist_03" placeholder="Main Artist performing #3">
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>
</main>